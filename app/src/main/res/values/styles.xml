<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionMenuTextColor">@drawable/actionbar_textcolor</item>
        <item name="android:actionBarDivider">@drawable/actionbar_divider</item>
        <item name="android:dividerHeight">30dp</item>
        <item name="android:titleTextAppearance">@style/TitleTextAppearance</item>



    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18dp</item>
        <item name="android:dividerHeight">5dp</item>
    </style>
    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/nigeria_green</item>
    </style>

    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/nigeria_green</item>


    </style>

    <style name="TextAppearance" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@drawable/actionbar_textcolor</item>


    </style>

    <style name="TitleTextAppearance" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@drawable/actionbar_textcolor</item>
        <item name="android:ellipsize">marquee</item>

    </style>


    <style name="NoActionBar" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="question_textview_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="answer_textview_style">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/category_textview_color</item>

    </style>
    <style name="answer_textview_spinner_style">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>
