<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timeline_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pledge.nigeria.com.nigeriapldge.NigeriaCategoryActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"></ImageView>

    <TextView
        android:id="@+id/send_report_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:text="@string/send_report_desc_header"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/category_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/send_report_text"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"></ListView>

  <!--  <TextView
        android:id="@+id/send_report_text_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_list_view"
        android:layout_marginTop="5dp"
        android:text="@string/send_report_desc_footer"
        android:textSize="22dp"
        android:textStyle="bold" />-->

</RelativeLayout>
