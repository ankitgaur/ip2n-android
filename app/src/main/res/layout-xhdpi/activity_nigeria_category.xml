<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timeline_bg"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="pledge.nigeria.com.nigeriapldge.NigeriaCategoryActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"></ImageView>

    <TextView
        android:id="@+id/send_report_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="15dp"
        android:text="@string/send_report_desc_header"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/category_textview_color"/>

    <ListView
        android:id="@+id/category_list_view"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_below="@+id/send_report_text"
        android:layout_marginTop="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="7dp"></ListView>

    <TextView
        android:id="@+id/send_report_text_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_list_view"
        android:layout_marginTop="5dp"
        android:text="@string/send_report_desc_footer"
        android:textSize="20dp"
        android:textColor="@color/category_textview_color"
        android:textStyle="bold" />

</RelativeLayout>
